@model AspNetIdentity.Models.Register

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Register [ validate by jquery.validate.unobtrusive.js ]</h1>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id="RegisterForm" }))
{ 
    @Html.AntiForgeryToken();
    <table>
        <tr>
            <td>@Html.LabelFor(m => m.UserName)</td>
            <td>@Html.TextBoxFor(m => m.UserName)</td>
            <td>@Html.ValidationMessageFor(m => m.UserName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Password)</td>
            <td>@Html.PasswordFor(m => m.Password)</td>
            <td>@Html.ValidationMessageFor(m => m.Password)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.ConfirmPassword)</td>
            <td>@Html.PasswordFor(m => m.ConfirmPassword)</td>
            <td>@Html.ValidationMessageFor(m => m.ConfirmPassword)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Email)</td>
            <td>@Html.TextBoxFor(m => m.Email)</td>
            <td>@Html.ValidationMessageFor(m => m.Email)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.FullName)</td>
            <td>@Html.TextBoxFor(m => m.FullName)</td>
            <td>@Html.ValidationMessageFor(m => m.FullName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.BirthDate)</td>
            <td>@Html.TextBoxFor(m => m.BirthDate)</td>
            <td>@Html.ValidationMessageFor(m => m.BirthDate)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m => m.Bio)</td>
            <td>@Html.TextAreaFor(m => m.Bio)</td>
            <td>@Html.ValidationMessageFor(m => m.Bio)</td>
        </tr>
        <tr>
            <td><input type="submit" value="Register" /></td>
        </tr>
    </table>
}
@Html.ValidationSummary()

@section Scripts{

<script src="~/Scripts/jquery-1.8.3.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}